<window width="500" height="450" title="Help" maximizable="false" minimizable="false" collapsable="false" >
	<tabview width="100%" height="100%">
		<box width="100%" text="Basics">
			<label text="I wish I could help you bud.
No, honestly. Even though I have coded this entire editor, I am\nunable to properly explain how to do shit in here.
If someone genuinely wants to help me with writing a guide,\nplease contact me on discord @anysad." />
		</box>
		<box width="100%" text="Hotkeys">
			<tableview width="100%" height="335" contentWidth="100%">
				<header width="100%">
					<column id="action" text="Action" width="50%" />
					<column id="keybind" text="Keybind" width="50%" />
				</header>
				<data>
					<item action="Show User Guide" keybind="F1" />
					<item action="Preferences" keybind="F6" />
					<item action="New" keybind="Ctrl + N" />
					<item action="Save" keybind="Ctrl + S" />
					<item action="Quit to Menu" keybind="Ctrl + Q" />
				</data>
			</tableview>
		</box>
		<box width="100%" text="Credits">
            <tableview width="100%" contentWidth="100%">
                <header width="100%">
					<column id="contributor" text="Contributor" width="50%" />
					<column id="roles" text="Roles" width="50%" />
				</header>
                <data>
                    <item contributor="anysad" roles="Coded the entire engine from the ground up." />
                    <item contributor="comedylost" roles="Original code for replacing notes." />
                </data>
            </tableview>
        </box>
	</tabview>
</window>
