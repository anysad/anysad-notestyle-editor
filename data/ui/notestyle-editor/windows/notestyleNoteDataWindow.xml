<window title="Notestyle Note Data" width="300" maximizable="false" minimizable="false" closable="false">
    <vbox width="100%">
        <grid columns="2" tooltip="The image to use for the asset.\nMay be a Sparrow sprite sheet." width="100%">
            <label text="Asset Path" verticalAlign="center" />
            <textfield id="notestyleNoteAssetPath" placeholder="Image to use as an asset." width="100%" />
        </grid>

        <grid columns="3" tooltip="The scale to render the note at." width="100%">
            <label text="Note Scale" verticalAlign="center" />
            <number-stepper id="notestyleNoteScale" style="font-size: 10px" pos="1" step="0.1" min="0.1" width="100%" />
        </grid>

        <grid columns="2" tooltip="If true, the note is a pixel sprite, and\nwill be rendered without anti-aliasing." width="100%">
            <label text="Is Note Pixel?" verticalAlign="center" />
            <checkbox id="notestyleNotePixel" width="100%" verticalAlign="center" />
        </grid>

        <grid columns="2" tooltip="The alpha to render the note at." width="100%">
            <label text="Note Alpha" verticalAlign="center" />
            <number-stepper id="notestyleNoteAlpha" style="font-size: 10px" pos="1" step="0.1" min="0.1" max="1.0" width="100%" />
        </grid>

        <grid columns="3" width="100%">
            <label text="Animated?" verticalAlign="center" />
            <checkbox id="notestyleNoteAnimated" width="100%" verticalAlign="center" />
            <button text="?" tooltip="If true, animations will be played on the graphic.\nDefault is false to save performance." horizontalAlign="right" />
        </grid>
    </vbox>

    <menu-separator />
</window>