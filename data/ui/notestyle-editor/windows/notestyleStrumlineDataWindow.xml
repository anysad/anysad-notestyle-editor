<window title="Notestyle Strumline Note Data" width="350" maximizable="false" minimizable="false" collapsable="false">
    <vbox width="100%">
        <grid columns="2" tooltip="The image to use for the asset.\nMay be a Sparrow sprite sheet." width="100%">
            <label text="Asset Path" verticalAlign="center" />
            <textfield id="notestyleStrumlineNoteAssetPath" placeholder="Image to use as an asset." width="100%" />
        </grid>

        <grid columns="2" width="100%">
            <hbox width="100%" tooltip="The scale to render the strumline note at." verticalAlign="center" >
                <label text="Scale" verticalAlign="center" />
                <number-stepper id="notestyleStrumlineNoteScale" style="font-size: 10px" pos="1" step="0.1" min="0.1" width="100%" />
            </hbox>
            <hbox width="100%" tooltip="If true, the note is a pixel sprite, and\nwill be rendered without anti-aliasing." verticalAlign="center" >
                <label text="Is Strumline Pixel?" verticalAlign="center" />
                <checkbox id="notestyleStrumlineNotePixel" width="100%" verticalAlign="center" />
            </hbox>
        </grid>

        <grid columns="2" width="100%" tooltip="Offset the sprite's position by this amount." >
            <hbox width="100%" verticalAlign="center" >
                <label text="Offset X" verticalAlign="center" />
                <number-stepper id="notestyleStrumlineNoteOffsetX" style="font-size: 10px" pos="0" step="0.5" width="100%" />
            </hbox>
            <hbox width="100%" verticalAlign="center" >
                <label text="Offset Y" verticalAlign="center" />
                <number-stepper id="notestyleStrumlineNoteOffsetY" style="font-size: 10px" pos="0" step="0.5" width="100%" />
            </hbox>
        </grid>
    </vbox>

    <menu-separator />

    <vbox width="100%">
        <dropdown id="notestyleStrumlineNoteDropdown" text="Select Data to change" width="100%" searchable="true">
            <data>
                <item text="Left Static" id="leftStatic" />
                <item text="Left Press" id="leftPress" />
                <item text="Left Confirm" id="leftConfirm" />
                <item text="Left Confirm Hold" id="leftConfirmHold" />

                <item text="Down Static" id="downStatic" />
                <item text="Down Press" id="downPress" />
                <item text="Down Confirm" id="downConfirm" />
                <item text="Down Confirm Hold" id="downConfirmHold" />

                <item text="Up Static" id="upStatic" />
                <item text="Up Press" id="upPress" />
                <item text="Up Confirm" id="upConfirm" />
                <item text="Up Confirm Hold" id="upConfirmHold" />

                <item text="Right Static" id="rightStatic" />
                <item text="Right Press" id="rightPress" />
                <item text="Right Confirm" id="rightConfirm" />
                <item text="Right Confirm Hold" id="rightConfirmHold" />
            </data>
        </dropdown>

        <hbox id="strumlineNoteDataFields" width="100%" verticalAlign="center" >
            <label id="strumlineNoteDataLabel" text="Note Prefix:" verticalAlign="center" />
        </hbox>
    </vbox>
</window>